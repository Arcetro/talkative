{
  "name": "conversational-workflow-agent-poc",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.12.2",
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "install:all": "pnpm install",
    "dev:backend": "pnpm --filter workflow-agent-backend dev",
    "dev:frontend": "pnpm --filter workflow-agent-frontend dev",
    "build": "pnpm --filter workflow-agent-backend build && pnpm --filter workflow-agent-frontend build",
    "test:backend": "npm run test --workspace backend"
  }
}
