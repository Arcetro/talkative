{
  "name": "conversational-workflow-agent-poc",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.12.2",
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "install:all": "pnpm install",
    "dev:backend": "pnpm --filter workflow-agent-backend dev",
    "dev:frontend": "pnpm --filter workflow-agent-frontend dev",
    "build": "npm run build --workspace backend && npm run build --workspace frontend",
    "test:backend": "npm run test --workspace backend",
    "lint": "npm run lint --workspace backend && npm run lint --workspace frontend",
    "typecheck": "npm run typecheck --workspace backend && npm run typecheck --workspace frontend"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.3",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "eslint": "^9.39.3",
    "eslint-plugin-react-hooks": "^7.0.1"
  }
}
